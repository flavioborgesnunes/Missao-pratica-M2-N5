<% for(var i=0; i < livros.length; i++) { %>
  <tr>
    <td>
      <%= livros[i].titulo %>
    </td>
    <td>
      <%= livros[i].codEditora %>
    </td>
    <td>
      <%= livros[i].resumo %>
    </td>
    <td>
      <%= livros[i].autores %>
    </td>
    <td>
      <a href="/atualizar_livro?id=<%= livros[i]._id%>" class="btn border-shadow update">
        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
      </a>
      <a class="btn border-shadow delete" data-id=<%=livros[i]._id%>
        <span class="text-gradient"><i class="fas fa-times"></i></span>
      </a>
    </td>
  </tr>
  <% } %>
